{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2022"],
        "types": ["node"],
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "#src/*": ["src/*"],
            "#acceptance-test/*": ["acceptance-test/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "acceptance-test", "acceptance-test-isolation-demo"],
    "exclude": ["node_modules", "dist"]
}
