{
    "name": "aaid-demo",
    "private": true,
    "version": "0.0.0",
    "engines": {
        "node": ">=22.0.0 <23.0.0"
    },
    "type": "module",
    "scripts": {
        "build": "tsup src/index.ts src/frontend/tictactoe-ui.ts src/adapters/web/server.ts --format esm --out-dir dist --clean",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "start": "node dist/index.js",
        "prestart": "pnpm run build",
        "start:ui": "pnpm run build && node dist/adapters/web/server.js",
        "playwright:install": "pnpm exec playwright install",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:at": "vitest run acceptance-test/",
        "test:at:watch": "vitest run acceptance-test/ --watch",
        "coverage": "vitest run --coverage",
        "lint": "eslint . -c eslint.config.js",
        "lint:fix": "eslint . -c eslint.config.js --fix",
        "check": "pnpm run lint && pnpm run test"
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@types/node": "^22.7.5",
        "eslint": "^9.35.0",
        "playwright": "^1.56.1",
        "tsup": "^8.0.1",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.44.0",
        "vitest": "^3.2.4"
    },
    "imports": {
        "#src/*": "./dist/*"
    }
}
